{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tapp",
  "version": "1.0.4",
  "identifier": "io.github.jl917",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:local",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tapp",
        "width": 800,
        "height": 600,
        "url": "https://jl917tapp.netlify.app/"
      }
    ],
    "security": {
      "csp": "default-src 'self' https://jl917tapp.netlify.app/"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
